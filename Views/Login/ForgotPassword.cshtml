@{
    Layout = null;
}

<!-- BAŞLIK KISIMLARI (CSS Linkleri vb.) Register ile aynı kalabilir -->
<!-- ... Head kodları ... -->
<!-- Şablonun CSS linklerinin burada olduğundan emin ol -->
<link href="~/Content/Templates/Tema/CSS/tema-2.min.css" rel="stylesheet" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-6 col-lg-6 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Şifrenizi mi Unuttunuz?</h1>
                                    <p class="mb-4">Endişelenmeyin! Kullanıcı adınızı ve sisteme kayıtlı e-posta adresinizi girin, size yeni bir şifre üretelim.</p>
                                </div>

                                <!-- MESAJ KUTUSU (Başlangıçta Gizli) -->
                                <div id="divMessage" class="alert" style="display:none; text-align:center;">
                                    <h4 id="msgTitle" style="margin:0; font-weight:bold;"></h4>
                                    <p id="msgBody" style="margin:0;"></p>
                                </div>

                                <form class="user" id="frmForgot">

                                    <!-- 1. KUTUCUK: MAIL -->
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                               name="Email"
                                               placeholder="Lütfen mail adresini giriniz..." required>
                                    </div>

                                    <!-- 2. KUTUCUK: KULLANICI ADI -->
                                    <div class="form-group">
                                        <input type="text" class="form-control form-control-user"
                                               name="Username"
                                               placeholder="Lütfen kullanıcı adını giriniz..." required>
                                    </div>

                                    <button type="button" onclick="SendNewPassword()" class="btn btn-primary btn-user btn-block">
                                        Yeni Şifre Üret
                                    </button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("Register", "Login")">Yeni Hesap Oluştur!</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" href="@Url.Action("Index", "Login")">Zaten bir hesabınız var mı? Giriş Yapın!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JQUERY EKLENTİSİ -->
<script src="~/Content/Templates/Tema/JS/jquery.min.js"></script>

<script>
    function SendNewPassword() {
        var form = $('#frmForgot');
        var msgDiv = $("#divMessage");
        var title = $("#msgTitle");
        var body = $("#msgBody");

        // HTML5 Validation
        if (!document.getElementById('frmForgot').checkValidity()) {
            document.getElementById('frmForgot').reportValidity();
            return;
        }

        // AJAX İsteği
        $.ajax({
            url: '@Url.Action("ForgotPassword", "Login")', // Controller'a gidiyoruz
            type: 'POST',
            data: form.serialize(), // Email ve Username verilerini paketle
            success: function (response) {

                msgDiv.show();
                msgDiv.removeClass("alert-success alert-danger");

                if (response.success) {
                    // --- BAŞARILI (YEŞİL) ---
                    msgDiv.addClass("alert-success");
                    title.text("Şifreniz Sıfırlandı!");

                    // Şifreyi ekrana yazdırıyoruz (Simülasyon)
                    body.html("Yeni Şifreniz: <strong>" + response.newPass + "</strong><br>Lütfen bu şifreyi not ediniz.");

                    // Formu temizle
                    document.getElementById("frmForgot").reset();

                } else {
                    // --- HATALI (KIRMIZI) ---
                    msgDiv.addClass("alert-danger");
                    title.text("Hata!");
                    body.text(response.message);
                }
            },
            error: function () {
                msgDiv.show();
                msgDiv.addClass("alert-danger");
                title.text("Sunucu Hatası");
                body.text("Bağlantı kurulamadı.");
            }
        });
    }
</script>