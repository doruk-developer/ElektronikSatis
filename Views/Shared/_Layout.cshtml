                /* 1. SAYFA DÜZENİ (FOOTER İÇİN) */
                html, body {
                    height: 100%;
                    margin: 0;
                }

                body {
                    display: flex;
                    flex-direction: column;
                    background-color: #f8f9fc;
                }

                .main-content {
                    flex: 1 0 auto;
                    padding-top: 100px;
                    padding-bottom: 40px;
                }

                footer {
