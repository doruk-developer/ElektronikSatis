                }

                .navbar-brand {
                    font-size: 1.8rem;
                    font-weight: 800;
                    letter-spacing: 1px;
                    text-shadow: 0 2px 4px rgba(0,0,0,0.2);
                }

                /* 3. ARAMA ÇUBUĞU (GLASSMORPHISM - BUZLU CAM ETKİSİ) */
                .search-wrapper {
                    background: rgba(255, 255, 255, 0.15); /* Yarı saydam beyaz */
                    border-radius: 50px; /* Tam yuvarlak köşeler */
                    padding: 2px;
                    display: flex;
                    align-items: center;
                    border: 1px solid rgba(255,255,255,0.2);
                    transition: all 0.3s;
                }

                    .search-wrapper:hover, .search-wrapper:focus-within {
                        background: rgba(255, 255, 255, 0.25);
                        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
                    }

                .search-input {
                    background: transparent;
                    border: none;
                    color: white;
                    padding-left: 20px;
                    font-weight: 600;
                }

                    .search-input::placeholder {
                        color: rgba(255,255,255,0.7);
                    }

                    .search-input:focus {
                        background: transparent;
                        color: white;
                        box-shadow: none;
                    }

                .search-btn {
                    background: transparent;
                    color: rgba(255,255,255,0.8);
                    border: none;
                    border-radius: 50%;
                    width: 40px;
                    height: 40px;
                    transition: all 0.2s;
                }

                    .search-btn:hover {
                        background: white;
                        color: #4e73df;
                        transform: scale(1.1);
                    }

                /* 4. PROFİL & SEPET (BÜYÜTÜLDÜ) */
                .nav-link {
                    color: rgba(255,255,255,0.95) !important;
                    font-weight: 700;
                    font-size: 1rem;
                }

                .img-profile {
                    width: 50px; /* Büyüttük */
                    height: 50px;
                    object-fit: cover;
                    border: 3px solid rgba(255,255,255,0.5); /* Çerçeve */
                    transition: all 0.2s;
                }

                    .img-profile:hover {
                        border-color: white;
                        transform: scale(1.05);
                    }

                .cart-icon-img {
                    height: 45px;
                    width: auto;
                    filter: drop-shadow(0 2px 3px rgba(0,0,0,0.3));
                    transition: transform 0.2s;
                }

                    .cart-icon-img:hover {
                        transform: scale(1.1) rotate(-5deg);
                    }

                .badge-counter {
                    top: -2px;
                    right: -5px;
                    font-size: 0.8rem;
                    padding: 0.35em 0.6em;
                    background-color: #e74a3b;
                    border: 2px solid white;
                    box-shadow: 0 2px 5px rgba(0,0,0,0.2);
                }

                /* 5. TEMA RENK KUTUCUKLARI (Dropdown İçinde) */
                .theme-circle {
                    width: 30px;
                    height: 30px;
                    border-radius: 50%;
                    cursor: pointer;
                    display: inline-block;
                    margin: 0 5px;
                    border: 2px solid #eaecf4;
                    transition: transform 0.2s;
                }

                    .theme-circle:hover {
                        transform: scale(1.2);
                        border-color: #858796;
                    }


                /* --- KATEGORİLER İÇİN YAN MENÜ (NESTED DROPDOWN) --- */

                .dropdown-submenu {
                    position: relative;
                }

                    /* Alt menüyü sağ tarafa aç */
                    .dropdown-submenu > .dropdown-menu {
                        top: 0;
                        left: 100%; /* Tam yanına */
                        margin-top: -6px;
                        margin-left: 0px;
                        border-radius: 0.35rem;
                        display: none; /* Varsayılan gizli */
                    }

                    /* Mouse üzerine gelince göster */
                    .dropdown-submenu:hover > .dropdown-menu {
                        display: block;
                    }

                    /* Oku Sağa Çevir (Bootstrap'ın varsayılan aşağı okunu döndürüyoruz) */
                    .dropdown-submenu > a::after {
                        transform: rotate(-90deg);
                        position: absolute;
                        right: 10px;
                        top: 45%;
                    }




                /* --- CANLI ARAMA KUTUSU TASARIMI --- */
                .search-results-box {
                    position: absolute;
                    top: 100%; /* Arama kutusunun tam altına */
                    left: 15px; /* Hafif içe */
                    width: 95%;
                    background: white;
                    border-radius: 0 0 15px 15px; /* Alt köşeleri yuvarla */
                    z-index: 1000;
                    display: none; /* Başlangıçta gizli */
                    max-height: 400px;
                    overflow-y: auto; /* Çok sonuç çıkarsa kaydırma çubuğu çıksın */
                    border: 1px solid #e3e6f0;
                }

                /* Sonuç Satırları */
