                        background-color: #f8f9fc;
                    }

                    .search-item:last-child {
                        border-bottom: none;
                    }

                .search-thumb {
                    width: 40px;
                    height: 40px;
                    object-fit: contain;
                    margin-right: 15px;
                    border: 1px solid #eee;
                    border-radius: 5px;
                }

                .search-info h6 {
                    font-size: 0.9rem;
                    margin: 0;
                    color: #333;
                    font-weight: 700;
                }

                .search-info span {
                    font-size: 0.8rem;
                    color: #1cc88a;
                    font-weight: 600;
                }


                /* KAR YAĞIŞI SİMÜLASYONU */
                .snow-container {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    pointer-events: none; /* Tıklamaları engellememesi için şart */
                    z-index: 9999;
                    background-image: url('data:image/svg+xml;charset=utf8,%3Csvg xmlns="http://www.w3.org/2000/svg" width="100" height="100"%3E%3Ccircle cx="50" cy="50" r="1.5" fill="rgba(255,255,255,0.7)"/%3E%3C/svg%3E'), url('data:image/svg+xml;charset=utf8,%3Csvg xmlns="http://www.w3.org/2000/svg" width="100" height="100"%3E%3Ccircle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.5)"/%3E%3C/svg%3E');
                    background-repeat: repeat;
                    animation: snowfall 10s linear infinite;
                }

                @@keyframes snowfall {
                    0% {
                        background-position: 0 0, 0 0;
                    }

                    100% {
                        background-position: 500px 1000px, 200px 500px;
                    }
                }

                /* SAYFA GİRİŞ ANİMASYONU */
                .fade-in {
                    animation: fadeInPage 0.8s ease-out forwards;
                }

                @@keyframes fadeInPage {
                    0% {
                        opacity: 0;
                        transform: translateY(20px); /* 20px aşağıdan başla */
                    }

                    100% {
                        opacity: 1;
                        transform: translateY(0); /* Yerine otur */
                    }
                }


                /* --- GLOBAL ÜRÜN KARTI TASARIMI (Tüm Sayfalar İçin) --- */
                .product-card {
                    border: none;
                    border-radius: 15px;
                    overflow: hidden;
                    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
                    background: #fff;
                    position: relative;
                }

                    .product-card:hover {
                        transform: translateY(-10px);
                        box-shadow: 0 14px 28px rgba(0,0,0,0.15), 0 10px 10px rgba(0,0,0,0.12) !important;
                    }

                .img-container {
                    height: 220px;
                    padding: 20px;
                    background: radial-gradient(circle, rgba(255,255,255,1) 0%, rgba(240,242,255,1) 100%);
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

                .product-img {
                    max-height: 100%;
                    max-width: 100%;
                    object-fit: contain;
                    transition: transform 0.3s ease;
                }

                .product-card:hover .product-img {
                    transform: scale(1.1);
                }

                .price-tag {
                    font-size: 1.2rem;
                    color: #4e73df;
                    font-weight: 800;
                }

                .btn-add-cart {
                    border-radius: 50px;
                    font-weight: 700;
                    text-transform: uppercase;
                    font-size: 0.8rem;
                    padding: 8px 0;
                    transition: all 0.3s;
                    background: linear-gradient(90deg, #4e73df 0%, #224abe 100%);
                    border: none;
                    color: white;
                }

                    .btn-add-cart:hover {
                        background: linear-gradient(90deg, #224abe 0%, #4e73df 100%);
                        transform: scale(1.02);
                    }

                .discount-tag {
                    background: #e74a3b;
                    color: white;
                    padding: 5px 10px;
                    border-radius: 20px;
                    font-size: 0.8rem;
                    font-weight: 700;
                    box-shadow: 0 4px 6px rgba(231, 74, 59, 0.4);
                    animation: pulse 2s infinite;
                }

                @@keyframes pulse {
                    0% {
                        transform: scale(1);
                    }

                    50% {
                        transform: scale(1.05);
                    }

                    100% {
                        transform: scale(1);
                    }
                }

                /* --- LOGO TASARIMI --- */

                .navbar-brand {
                    text-decoration: none !important; /* Alt çizgi olmasın */
                }

                /* İkon Kutusu */
                .brand-icon-box {
                    background-color: white;
                    color: #4e73df; /* Temanın mavisi */
                    width: 40px;
                    height: 40px;
                    border-radius: 8px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    font-size: 1.4rem;
                    box-shadow: 0 4px 6px rgba(0,0,0,0.2);
                    transform: rotate(-10deg); /* Hafif yamuk duruş */
                    transition: transform 0.3s;
                }

                /* Üzerine gelince ikon düzelsin */
                .navbar-brand:hover .brand-icon-box {
                    transform: rotate(0deg) scale(1.1);
                }

                /* DORUK Yazısı */
                .brand-text-main {
                    font-size: 1.4rem;
                    font-weight: 900;
                    color: white;
                    letter-spacing: 1px;
                    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
                }

                /* SHOP Yazısı */
                .brand-text-sub {
                    font-size: 0.7rem;
                    font-weight: 700;
                    color: #f6c23e; /* Sarı */
                    letter-spacing: 3px;
                    text-align: right;
                    margin-top: -3px;
                }

                /* --- KALP İKONU (FAVORİ BUTONU) --- */
                .btn-fav {
                    position: absolute;
                    top: 10px;
                    right: 10px;
                    z-index: 20; /* Resmin üzerinde dursun */
                    background: rgba(255, 255, 255, 0.8);
                    border: none;
                    border-radius: 50%;
                    width: 35px;
                    height: 35px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    color: #b7b7b7; /* Varsayılan gri */
                    transition: all 0.2s;
                    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                    cursor: pointer;
                }

                    .btn-fav:hover {
                        background: white;
                        color: #e74a3b; /* Hover olunca kırmızı */
                        transform: scale(1.1);
                    }

                    .btn-fav.active {
                        color: #e74a3b; /* Favorideyse hep kırmızı */
                    }

            </style>
        </head>

