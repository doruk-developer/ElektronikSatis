            <!-- KİŞİYE ÖZEL AYARLAR VE CANLI ARAMA (Hepsi Tek Script İçinde) -->
            <script>
                // 1. KULLANICI AYARLARI
                var rawUser = '@User.Identity.Name';
                var activeUser = rawUser ? rawUser : "Misafir";
                var cartKey = 'cart_' + activeUser;
                var themeKey = 'siteTheme_' + activeUser;

                $(document).ready(function () {
                    // Tema Yükle
                    var savedTheme = localStorage.getItem(themeKey);
                    if (savedTheme) applyTheme(savedTheme);

                    // Sepet Hesapla
                    if (rawUser !== "") calculateCartTotal();
                    else $('#cartItemCount').hide();
                });

                // 2. CANLI ARAMA FONKSİYONU (liveSearch)
                function liveSearch(input) {
                    var term = input.value;
                    var resultBox = document.getElementById("searchResults");

                    if (term.length < 2) {
                        if (resultBox) resultBox.style.display = "none";
                        return;
                    }

                    $.ajax({
                        url: '@Url.Action("CanliArama", "Home")',
                        type: 'GET',
                        data: { term: term },
                        success: function (data) {
                            if (!resultBox) return;

                            if (data.length === 0) {
                                resultBox.innerHTML = '<div class="p-3 text-muted text-center small">Sonuç bulunamadı.</div>';
                                resultBox.style.display = "block";
                                return;
                            }

                            var html = "";
                            data.forEach(function (item) {
                                var url = '/Home/UrunDetay/' + item.Id;
                                html += `
                                                    <a href="${url}" class="search-item">
                                                        <img src="${item.ResimYolu}" class="search-thumb">
                                                        <div class="search-info">
                                                            <h6>${item.Ad}</h6>
                                                            <span>${item.Fiyat}</span>
                                                        </div>
                                                    </a>
                                                `;
                            });

                            resultBox.innerHTML = html;
                            resultBox.style.display = "block";
                        },
                        error: function () { console.log("Arama hatası"); }
                    });
                }

                // Dışarı tıklayınca kapat
                document.addEventListener('click', function (event) {
                    var box = document.getElementById("searchResults");
                    var input = document.getElementById("liveSearchInput");
                    if (box && event.target !== box && event.target !== input) {
                        box.style.display = "none";
                    }
                });

                // 3. TEMA VE SEPET FONKSİYONLARI
                function changeTheme(color) {
                    applyTheme(color);
                    localStorage.setItem(themeKey, color);
                }

                function applyTheme(color) {
                    var themes = {
                        'blue': 'linear-gradient(90deg, #4e73df, #224abe)',
                        'red': 'linear-gradient(90deg, #e74a3b, #be2617)',
                        'green': 'linear-gradient(90deg, #1cc88a, #13855c)',
                        'cyan': 'linear-gradient(90deg, #36b9cc, #258391)',
                        'dark': 'linear-gradient(90deg, #1f1f1f, #000000)'
                    };
                    var navbar = document.getElementById('mainNavbar');
                    if (navbar && themes[color]) {
                        navbar.style.background = themes[color];
                    }
                }

                function addToCart(productName, price, imagePath) {
                    if (rawUser === "") {
                        // SweetAlert varsa onu kullan, yoksa alert
                        if (typeof Swal !== 'undefined') {
                            Swal.fire({ icon: 'warning', title: 'Giriş Yapmalısınız', text: 'Sepete eklemek için lütfen giriş yapın.' })
                                .then(() => { window.location.href = '@Url.Action("Index", "Login")'; });
                        } else {
                            alert("Lütfen giriş yapınız.");
                            window.location.href = '@Url.Action("Index", "Login")';
                        }
                        return;
                    }
                    var cart = JSON.parse(localStorage.getItem(cartKey)) || [];
                    var existingProduct = cart.find(x => x.name === productName);
                    if (existingProduct) existingProduct.quantity++;
                    else cart.push({ name: productName, price: price, image: imagePath, quantity: 1 });
                    localStorage.setItem(cartKey, JSON.stringify(cart));
                    calculateCartTotal();

                    // Bildirim
                    if (typeof showNotification === 'function') showNotification('success', productName + ' sepete eklendi!');
                }

                function calculateCartTotal() {
                    if (rawUser === "") return;
                    var cart = JSON.parse(localStorage.getItem(cartKey)) || [];
                    var totalCount = 0;
                    cart.forEach(item => totalCount += item.quantity);
                    $('#cartItemCount').text(totalCount);
                    if (totalCount > 0) $('#cartItemCount').show(); else $('#cartItemCount').hide();
                }

                // --- SLOGAN ANİMASYONU ---
                const slogans = [
                    "Teknolojinin Yeni Adresi",
                    "Bugüne Özel Fırsatlar",
                    "Hızlı ve Güvenli Kargo",
                    "Müşteri Memnuniyeti Garantisi"
                ];

                let sloganIndex = 0;

                function rotateSlogan() {
                    var sloganElement = document.getElementById("dynamicSlogan");
                    if (!sloganElement) return;

                    // 1. Önce yazıyı gizle (Opaklık 0)
                    sloganElement.style.opacity = "0";

                    setTimeout(function () {
                        // 2. Yazıyı değiştir
                        sloganElement.innerText = slogans[sloganIndex];

                        // 3. Yazıyı göster (Opaklık 1)
                        sloganElement.style.opacity = "1";

                        // Sıradaki slogana geç (Başa dönmeli döngü)
                        sloganIndex = (sloganIndex + 1) % slogans.length;
                    }, 500); // Yarım saniye bekle (Silinme efekti için)
                }

                // Sayfa açılınca başlat ve her 4 saniyede bir değiştir
                setInterval(rotateSlogan, 4000);
                rotateSlogan(); // İlk açılışta hemen çalışsın

                // --- FAVORİ EKLE/ÇIKAR FONKSİYONU ---
                function toggleFav(id, btnElement) {
                    // Giriş yapmamışsa uyar
                    if (activeUser === "") {
                        alert("Favorileri kullanmak için lütfen giriş yapınız.");
                        return;
                    }

                    $.ajax({
                        url: '@Url.Action("FavoriIslemi", "Home")', // Controller'daki metot
                        type: 'POST',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                // İkonun rengini değiştir (Kırmızı/Gri)
                                if (response.islem === "eklendi") {
                                    $(btnElement).addClass("active");
                                    // Opsiyonel: Toast Bildirim
                                    if (typeof showNotification === 'function') showNotification('success', 'Favorilere eklendi!');
                                } else {
                                    $(btnElement).removeClass("active");
                                    if (typeof showNotification === 'function') showNotification('info', 'Favorilerden çıkarıldı.');
                                }
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function () {
                            console.log("Favori işlemi hatası");
                        }
                    });
                }

            </script>
        </body>
