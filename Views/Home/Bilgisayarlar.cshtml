@{
    ViewBag.Title = "Bilgisayarlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Bilgisayarlar</h1>

<div class="row">

    <!-- ÜRÜN 1: Asus -->
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card shadow h-100 product-card">
            <div class="badge-overlay">
                <span class="badge badge-success px-3 py-2">Çok Satanlar</span>
            </div>
            <div class="img-container p-3">
                <img src="~/Content/image/laptop1.jpg" class="card-img-top product-img" alt="Asus Laptop">
            </div>
            <div class="card-body d-flex flex-column">
                <h6 class="card-title font-weight-bold text-dark" style="height: 40px; overflow: hidden;">
                    Asus Vivobook 15 X1502ZA Intel Core i5 1235U 8GB 512GB SSD
                </h6>
                <div class="mt-auto">
                    <div class="mb-2">
                        <span class="badge badge-soft-primary text-primary border border-primary">Peşin Fiyatına 3 Taksit</span>
                    </div>
                    <h4 class="font-weight-bold text-dark mb-3">18.499,00 TL</h4>

                    <!-- BUTONLAR -->
                    <div class="row no-gutters">
                        <div class="col-6 pr-1">
                            <a href="@Url.Action("UrunDetay", "Home", new { id = 1 })" class="btn btn-light btn-block border">
                                <i class="fas fa-search fa-sm"></i> İncele
                            </a>
                        </div>
                        <div class="col-6 pl-1">
                            <button class="btn btn-primary btn-block" onclick="addToCart('Asus Vivobook 15', 18499, '/Content/image/laptop1.jpg')">
                                <i class="fas fa-cart-plus"></i> Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ÜRÜN 2: MSI -->
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card shadow h-100 product-card">
            <div class="badge-overlay">
                <span class="badge badge-warning text-white px-3 py-2">Fırsat Ürünü</span>
            </div>
            <div class="img-container p-3">
                <img src="~/Content/image/laptop2.jpg" class="card-img-top product-img" alt="MSI Laptop">
            </div>
            <div class="card-body d-flex flex-column">
                <h6 class="card-title font-weight-bold text-dark" style="height: 40px; overflow: hidden;">
                    MSI Thin 15 B12UC-1478XTR Intel Core i5-12450H 15.6" 144Hz
                </h6>
                <div class="mt-auto">
                    <div class="mb-2">
                        <span class="badge badge-soft-primary text-primary border border-primary">Kargo Bedava</span>
                    </div>
                    <h4 class="font-weight-bold text-dark mb-3">31.898 TL</h4>

                    <!-- BUTONLAR -->
                    <div class="row no-gutters">
                        <div class="col-6 pr-1">
                            <a href="@Url.Action("UrunDetay", "Home", new { id = 2 })" class="btn btn-light btn-block border">
                                <i class="fas fa-search fa-sm"></i> İncele
                            </a>
                        </div>
                        <div class="col-6 pl-1">
                            <button class="btn btn-primary btn-block" onclick="addToCart('MSI Thin 15', 31898, '/Content/image/laptop2.jpg')">
                                <i class="fas fa-cart-plus"></i> Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- CSS (Ortak) -->
<style>
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #e3e6f0;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
            border-color: #4e73df;
        }

    .img-container {
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-bottom: 1px solid #f1f1f1;
    }

    .product-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }

    .badge-overlay {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 5;
    }

    body.dark-mode .product-card {
        background-color: #1e1e1e;
        border-color: #333;
    }

    body.dark-mode .img-container {
        background-color: #1e1e1e;
        border-bottom: 1px solid #333;
    }
</style>