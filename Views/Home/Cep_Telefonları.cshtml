@{
    ViewBag.Title = "Cep Telefonları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Sayfa Başlığı -->
<h1 class="h3 mb-4 text-gray-800">Cep Telefonları</h1>

<div class="row">

    <!-- ÜRÜN 1: Xiaomi Redmi -->
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card shadow h-100 product-card">
            <!-- Rozet -->
            <div class="badge-overlay">
                <span class="badge badge-success px-3 py-2">Çok Satanlar</span>
            </div>

            <!-- Resim Alanı -->
            <div class="img-container p-3">
                <img src="~/Content/image/telefon1.png" class="card-img-top product-img" alt="Xiaomi Redmi">
            </div>

            <!-- Ürün Bilgileri -->
            <div class="card-body d-flex flex-column">
                <h6 class="card-title font-weight-bold text-dark" style="height: 40px; overflow: hidden;">
                    Xiaomi Redmi Note 13 Pro 8GB+256GB Gece Siyahı
                </h6>

                <div class="mt-auto">
                    <!-- Kampanya Etiketi -->
                    <div class="mb-2">
                        <span class="badge badge-soft-primary text-primary border border-primary">Peşin Fiyatına 3 Taksit</span>
                    </div>

                    <!-- Fiyat -->
                    <h4 class="font-weight-bold text-dark mb-3">16.499,00 TL</h4>

                    <!-- BUTON ALANI (DEĞİŞTİRİLDİ) -->
                    <div class="row no-gutters">
                        <!-- İncele Butonu (ID: 3) -->
                        <div class="col-6 pr-1">
                            <a href="@Url.Action("UrunDetay", "Home", new { id = 3 })" class="btn btn-light btn-block border">
                                <i class="fas fa-search fa-sm"></i> İncele
                            </a>
                        </div>
                        <!-- Sepete Ekle Butonu -->
                        <div class="col-6 pl-1">
                            <button class="btn btn-primary btn-block add-to-cart-btn"
                                    onclick="addToCart('Xiaomi Redmi Note 13 Pro', 16499, '/Content/image/telefon1.png')">
                                <i class="fas fa-cart-plus"></i> Ekle
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- ÜRÜN 2: General Mobile -->
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card shadow h-100 product-card">
            <div class="badge-overlay">
                <span class="badge badge-warning text-white px-3 py-2">Fırsat Ürünü</span>
            </div>

            <div class="img-container p-3">
                <img src="~/Content/image/telefon2.png" class="card-img-top product-img" alt="General Mobile">
            </div>

            <div class="card-body d-flex flex-column">
                <h6 class="card-title font-weight-bold text-dark" style="height: 40px; overflow: hidden;">
                    General Mobile GM 24 Pro 256GB Beyaz
                </h6>

                <div class="mt-auto">
                    <div class="mb-2">
                        <span class="badge badge-soft-primary text-primary border border-primary">Kargo Bedava</span>
                    </div>

                    <h4 class="font-weight-bold text-dark mb-3">9.999 TL</h4>

                    <!-- BUTON ALANI (DEĞİŞTİRİLDİ) -->
                    <div class="row no-gutters">
                        <!-- İncele Butonu (ID: 4) -->
                        <div class="col-6 pr-1">
                            <a href="@Url.Action("UrunDetay", "Home", new { id = 4 })" class="btn btn-light btn-block border">
                                <i class="fas fa-search fa-sm"></i> İncele
                            </a>
                        </div>
                        <!-- Sepete Ekle Butonu -->
                        <div class="col-6 pl-1">
                            <button class="btn btn-primary btn-block add-to-cart-btn"
                                    onclick="addToCart('General Mobile GM 24 Pro', 9999, '/Content/image/telefon2.png')">
                                <i class="fas fa-cart-plus"></i> Ekle
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

<!-- CSS (Aynı Kalıyor) -->
<style>
    /* Kartın kendisi */
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #e3e6f0;
    }

        /* Üzerine gelince havalanma efekti */
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
            border-color: #4e73df;
        }

    /* Resim Kutusu */
    .img-container {
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-bottom: 1px solid #f1f1f1;
    }

    /* Resmin Kendisi */
    .product-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }

    /* Sol Üstteki Rozet */
    .badge-overlay {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 5;
    }

    /* Dark Mode Uyumu */
    body.dark-mode .product-card {
        background-color: #1e1e1e;
        border-color: #333;
    }

    body.dark-mode .img-container {
        background-color: #1e1e1e;
        border-bottom: 1px solid #333;
    }
</style>