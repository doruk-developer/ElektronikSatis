
@model List<ElektronikSatis.Models.Siparis>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Başlık ve Temizle Butonu -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Geçmiş Siparişlerim</h1>

    <!-- TEMİZLEME BUTONU -->
    <a href="@Url.Action("GecmisiTemizle", "Home")"
       onclick="return confirm('Tüm sipariş geçmişiniz silinecek. Emin misiniz?');"
       class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
        <i class="fas fa-trash fa-sm text-white-50"></i> Geçmişi Temizle
    </a>
</div>

<!-- Siparişlerin Listelendiği Alan -->
<div id="ordersContainer">
    @if (Model != null && Model.Count > 0)
    {
        foreach (var order in Model)
        {
            <div class="card shadow mb-4 border-left-success">
                <div class="card-header py-3 bg-white">
                    <div class="d-flex justify-content-between align-items-center">

                        <!-- SOL TARAFTAKİ BİLGİLER -->
                        <div>
                            <h6 class="m-0 font-weight-bold text-success">Sipariş No: #@order.SiparisNo</h6>
                            <small class="text-muted">@order.Tarih</small>
                        </div>

                        <!-- SAĞ TARAFTAKİ BİLGİLER VE SİL BUTONU -->
                        <div class="text-right d-flex align-items-center">
                            <div class="mr-3">
                                <div class="h5 font-weight-bold text-dark mb-0">@order.ToplamTutar</div>
                                <span class="badge badge-info">@order.Durum</span>
                            </div>

                            <!-- YENİ EKLENEN: TEKİL SİLME BUTONU -->
                            <a href="@Url.Action("SiparisSil", "Home", new { siparisNo = order.SiparisNo })"
                               onclick="return confirm('Bu sipariş kaydını silmek istediğinize emin misiniz?');"
                               class="btn btn-outline-danger btn-circle btn-sm" title="Bu siparişi sil">
                                <i class="fas fa-times"></i>
                            </a>

                        </div>
                    </div>

                    <!-- Adres Bilgisi (Aynen Kalıyor) -->
                    <div class="mt-2 pt-2 border-top small text-muted">
                        <i class="fas fa-map-marker-alt text-danger mr-1"></i>
                        <strong>Teslimat Adresi:</strong> @order.TeslimatAdresi
                    </div>
                </div>
                <div class="card-body">
                    @if (order.Urunler != null)
                    {
                        foreach (var item in order.Urunler)
                        {
                            <div class="d-flex align-items-center mb-2 border-bottom pb-2">
                                <img src="@item.Resim" style="width:50px; height:50px; object-fit:contain; border:1px solid #eee; border-radius:5px;" class="mr-3">
                                <div>
                                    <span class="font-weight-bold text-dark">@item.UrunAdi</span><br>
                                    <span class="small text-muted">@item.Adet Adet x @item.Fiyat.ToString("N0") TL</span>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-3x text-gray-300 mb-3"></i>
            <p class="lead text-gray-800">Henüz bir siparişiniz bulunmuyor.</p>
            <a href="~/Home/Index" class="btn btn-primary">Alışverişe Başla</a>
        </div>
    }
</div>

<!-- Sipariş Yok Mesajı (Gizli) -->
<div id="noOrderMessage" class="text-center py-5" style="display:none;">
    <i class="fas fa-box-open fa-3x text-gray-300 mb-3"></i>
    <p class="lead text-gray-800">Henüz bir siparişiniz bulunmuyor.</p>
    <a href="~/Home/Index" class="btn btn-primary">Alışverişe Başla</a>
</div>
