
@{
    ViewBag.Title = "Geçmiş Siparişlerim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Başlık ve Temizle Butonu -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Geçmiş Siparişlerim</h1>

    <!-- TEMİZLEME BUTONU -->
    <button onclick="clearHistory()" class="d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm">
        <i class="fas fa-trash fa-sm text-white-50"></i> Geçmişi Temizle
    </button>
</div>

<!-- Siparişlerin Listelendiği Alan -->
<div id="ordersContainer">
    <!-- JavaScript burayı dolduracak -->
</div>

<!-- Sipariş Yok Mesajı (Gizli) -->
<div id="noOrderMessage" class="text-center py-5" style="display:none;">
    <i class="fas fa-box-open fa-3x text-gray-300 mb-3"></i>
    <p class="lead text-gray-800">Henüz bir siparişiniz bulunmuyor.</p>
    <a href="~/Home/Index" class="btn btn-primary">Alışverişe Başla</a>
</div>

<!-- JAVASCRIPT -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        renderOrders();
    });

    // Siparişleri Ekrana Basma Fonksiyonu
    function renderOrders() {
        var orders = JSON.parse(localStorage.getItem('myPastOrders')) || [];
        var container = document.getElementById('ordersContainer');
        var noOrderMsg = document.getElementById('noOrderMessage');

        // Önce temizle ki üst üste binmesin
        container.innerHTML = "";

        if (orders.length === 0) {
            noOrderMsg.style.display = 'block';
            return;
        } else {
            noOrderMsg.style.display = 'none';
        }

        orders.forEach(order => {
            var productHtml = "";
            // Sipariş içindeki her ürünü listele
            order.items.forEach(item => {
                // Resim yolu kontrolü (Hata vermemesi için)
                var imgPath = item.image ? item.image : '/Content/image/sembol_sepet.png';

                productHtml += `
                    <div class="d-flex align-items-center mb-2 border-bottom pb-2">
                        <img src="${imgPath}" style="width:50px; height:50px; object-fit:contain; border:1px solid #eee; border-radius:5px;" class="mr-3">
                        <div>
                            <span class="font-weight-bold text-dark">${item.name}</span><br>
                            <span class="small text-muted">${item.quantity} Adet x ${formatMoney(item.price)} TL</span>
                        </div>
                    </div>
                `;
            });

            var cardHtml = `
                <div class="card shadow mb-4 border-left-success">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white">
                        <div>
                            <h6 class="m-0 font-weight-bold text-success">Sipariş No: #${order.orderNo}</h6>
                            <small class="text-muted">${order.date}</small>
                        </div>
                        <div class="text-right">
                            <div class="h5 font-weight-bold text-dark">${order.total}</div>
                            <span class="badge badge-info">${order.status}</span>
                        </div>
                    </div>
                    <div class="card-body">
                        ${productHtml}
                    </div>
                </div>
            `;
            container.innerHTML += cardHtml;
        });
    }

    // GEÇMİŞİ TEMİZLEME FONKSİYONU (YENİ)
    function clearHistory() {
        // Önce geçmiş var mı kontrol et
        var orders = JSON.parse(localStorage.getItem('myPastOrders')) || [];

        if (orders.length === 0) {
            alert("Zaten temizlenecek bir geçmişiniz yok.");
            return;
        }

        // Kullanıcıdan onay al
        if (confirm("Tüm sipariş geçmişiniz kalıcı olarak silinecek. Emin misiniz?")) {
            // 1. Hafızayı sil
            localStorage.removeItem('myPastOrders');

            // 2. Ekranı yenile (renderOrders boş liste göreceği için 'Sipariş Yok' mesajını gösterecek)
            renderOrders();

            // Ufak bir bildirim (Opsiyonel)
            // alert("Geçmiş temizlendi.");
        }
    }

    // Para Formatı
    function formatMoney(amount) {
        return amount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
    }
</script>

