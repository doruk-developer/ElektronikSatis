
@{
    ViewBag.Title = "Switchler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Endüstriyel Switchler</h1>

<div class="row">

    <!-- ÜRÜN 1: Cisco Switch -->
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card shadow h-100 product-card">
            <div class="badge-overlay">
                <span class="badge badge-primary px-3 py-2">Kurumsal</span>
            </div>
            <div class="img-container p-3">
                <img src="~/Content/image/switch1.jpg" class="card-img-top product-img" alt="Cisco Switch">
            </div>
            <div class="card-body d-flex flex-column">
                <h6 class="card-title font-weight-bold text-dark" style="height: 40px; overflow: hidden;">
                    Cisco Catalyst 9200L 24-Port PoE+ Network Switch
                </h6>
                <div class="mt-auto">
                    <div class="mb-2">
                        <span class="badge badge-soft-primary text-primary border border-primary">Ömür Boyu Garanti</span>
                    </div>
                    <h4 class="font-weight-bold text-dark mb-3">34.500,00 TL</h4>

                    <!-- BUTONLAR -->
                    <div class="row no-gutters">
                        <div class="col-6 pr-1">
                            <a href="@Url.Action("UrunDetay", "Home", new { id = 5 })" class="btn btn-light btn-block border">
                                <i class="fas fa-search fa-sm"></i> İncele
                            </a>
                        </div>
                        <div class="col-6 pl-1">
                            <button class="btn btn-primary btn-block" onclick="addToCart('Cisco Catalyst 9200L', 34500, '/Content/image/switch1.jpg')">
                                <i class="fas fa-cart-plus"></i> Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ÜRÜN 2: Huawei Switch -->
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card shadow h-100 product-card">
            <div class="badge-overlay">
                <span class="badge badge-success px-3 py-2">Fiyat/Performans</span>
            </div>
            <div class="img-container p-3">
                <img src="~/Content/image/switch2.jpg" class="card-img-top product-img" alt="Huawei Switch">
            </div>
            <div class="card-body d-flex flex-column">
                <h6 class="card-title font-weight-bold text-dark" style="height: 40px; overflow: hidden;">
                    Huawei CloudEngine S5735-L24T4S-A Gigabit Switch
                </h6>
                <div class="mt-auto">
                    <div class="mb-2">
                        <span class="badge badge-soft-primary text-primary border border-primary">Hızlı Kargo</span>
                    </div>
                    <h4 class="font-weight-bold text-dark mb-3">15.750,00 TL</h4>

                    <!-- BUTONLAR -->
                    <div class="row no-gutters">
                        <div class="col-6 pr-1">
                            <a href="@Url.Action("UrunDetay", "Home", new { id = 6 })" class="btn btn-light btn-block border">
                                <i class="fas fa-search fa-sm"></i> İncele
                            </a>
                        </div>
                        <div class="col-6 pl-1">
                            <button class="btn btn-primary btn-block" onclick="addToCart('Huawei CloudEngine', 15750, '/Content/image/switch2.jpg')">
                                <i class="fas fa-cart-plus"></i> Ekle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- CSS (Ortak) -->
<style>
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #e3e6f0;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
            border-color: #4e73df;
        }

    .img-container {
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-bottom: 1px solid #f1f1f1;
    }

    .product-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
    }

    .badge-overlay {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 5;
    }

    body.dark-mode .product-card {
        background-color: #1e1e1e;
        border-color: #333;
    }

    body.dark-mode .img-container {
        background-color: #1e1e1e;
        border-bottom: 1px solid #333;
    }
</style>
