
@model IEnumerable<ElektronikSatis.Models.Mesaj>

@{
    ViewBag.Title = "Mesajlarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <h1 class="h3 mb-4 text-gray-800">Mesaj Kutusu</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Gelen Bildirimler (@Model.Count())</h6>
        </div>
        <div class="list-group list-group-flush">

            @foreach (var mesaj in Model)
            {
                <!-- YENİ SATIR YAPISI -->
                <div class="list-group-item list-group-item-action d-flex align-items-center justify-content-between p-3">

                    <!-- SOL TARAF: MESAJI OKU (LİNK) -->
                    <a href="@Url.Action("MesajOku", "Home", new { id = mesaj.Id })" class="d-flex align-items-center text-decoration-none text-dark w-100" style="overflow: hidden;">

                        <!-- İkon -->
                        <div class="rounded-circle @mesaj.RenkClass d-flex align-items-center justify-content-center mr-3 flex-shrink-0" style="width:50px; height:50px;">
                            <i class="@mesaj.ResimYolu text-white"></i>
                        </div>

                        <!-- Yazılar -->
                        <div class="overflow-hidden">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-1 font-weight-bold text-dark text-truncate">@mesaj.Baslik</h6>
                                <!-- Zamanı buraya, başlığın yanına sıkıştırdık -->
                                <small class="text-muted ml-2 text-nowrap">@mesaj.Zaman</small>
                            </div>
                            <p class="mb-0 text-secondary text-truncate" style="font-size: 0.9rem;">@mesaj.Icerik</p>
                        </div>
                    </a>

                    <!-- SAĞ TARAF: SİL BUTONU -->
                    <a href="@Url.Action("MesajSil", "Home", new { id = mesaj.Id })"
                       class="btn btn-outline-danger btn-circle btn-sm ml-3 flex-shrink-0"
                       onclick="return confirm('Bu mesajı silmek istediğinize emin misiniz?');"
                       title="Mesajı Sil">
                        <i class="fas fa-trash"></i>
                    </a>

                </div>
             }

        </div>
    </div>

</div>

