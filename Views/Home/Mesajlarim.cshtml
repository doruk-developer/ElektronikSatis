
@model IEnumerable<ElektronikSatisProje.Models.Mesaj>

@{
    ViewBag.Title = "Mesajlarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <h1 class="h3 mb-4 text-gray-800">Mesaj Kutusu</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Gelen Bildirimler (@Model.Count())</h6>
        </div>
        <div class="list-group list-group-flush">

            @foreach (var mesaj in Model)
            {
                <a href="@Url.Action("MesajOku", "Home", new { id = mesaj.Id })" class="list-group-item list-group-item-action d-flex align-items-center p-3">
                    <!-- İkon -->
                    <div class="mr-3">
                        <div class="rounded-circle @mesaj.RenkClass d-flex align-items-center justify-content-center text-white" style="width:50px; height:50px;">
                            <i class="@mesaj.ResimYolu"></i>
                        </div>
                    </div>

                    <!-- İçerik -->
                    <div class="w-100">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1 font-weight-bold text-dark">@mesaj.Baslik</h5>
                            <small class="text-muted">@mesaj.Zaman</small>
                        </div>
                        <p class="mb-1 text-secondary text-truncate" style="max-width: 800px;">@mesaj.Icerik</p>
                    </div>

                    <!-- Ok butonu -->
                    <i class="fas fa-chevron-right text-gray-300 ml-3"></i>
                </a>
            }

        </div>
    </div>

</div>

