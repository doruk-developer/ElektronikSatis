<!-- ŞİFRE DEĞİŞTİRME MODALI -->
<div class="modal fade" id="passwordModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold text-primary">Şifre Değiştir</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="passwordForm">
                    <div class="form-group">
                        <label>Mevcut Şifre</label>
                        <input type="password" class="form-control" id="currentPass">
                    </div>
                    <div class="form-group">
                        <label>Yeni Şifre</label>
                        <input type="password" class="form-control" id="newPass">
                    </div>
                    <div class="form-group">
                        <label>Yeni Şifre (Tekrar)</label>
                        <input type="password" class="form-control" id="confirmPass">
                    </div>
                    <div id="passwordAlert" class="alert alert-danger small" style="display:none;"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">İptal</button>
                <button class="btn btn-primary" type="button" onclick="changePassword()">Güncelle</button>
            </div>
        </div>
    </div>
</div>


<!-- CSS (Fotoğraf Yükleme Efekti İçin) -->
<style>
    .profile-pic-wrapper {
        width: 100%;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .pic-holder {
        text-align: center;
        position: relative;
        border-radius: 50%;
        width: 150px;
        height: 150px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 5px solid #eaecf4; /* SB Admin grisi */
        box-shadow: 0px 5px 15px rgba(0,0,0,0.15);
    }

        .pic-holder .pic {
            height: 100%;
            width: 100%;
            object-fit: cover;
            object-position: center;
        }

        .pic-holder .upload-file-block {
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6); /* Siyah transparan */
            color: white;
            font-size: 12px;
            font-weight: 600;
            position: absolute;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            opacity: 0; /* Başlangıçta gizli */
            transition: opacity 0.3s;
        }

        /* Hover olunca göster */
        .pic-holder:hover .upload-file-block {
            opacity: 1;
        }

        .pic-holder .pic {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Resmi orantılı şekilde yuvarlağa sığdırır */
            display: block; /* Satır içi boşlukları temizler */
        }

    /* 2. O görünmez input'u tamamen gizle ki yer kaplamasın */
    .uploadProfileInput {
        display: none;
    }

    /* --- SEKME (TAB) TASARIMI --- */

    /* 1. Normal (Pasif) Durumdaki Yazılar */
    .nav-tabs .nav-link {
        color: #5a5c69; /* Koyu Gri (Okunaklı) */
        background-color: #f8f9fc; /* Hafif Gri Arka Plan */
        border: 1px solid #eaecf4;
        font-weight: 700; /* Kalın */
    }

    /* 2. Aktif (Seçili) Sekme */
    .nav-tabs .nav-link.active {
        color: #4e73df !important; /* Mavi Yazı */
        background-color: #fff !important; /* Beyaz Arka Plan */
        border-bottom: 2px solid #4e73df; /* Altına Mavi Çizgi */
    }

    /* 3. Mouse Üzerine Gelince (Hover) */
    .nav-tabs .nav-link:hover {
        background-color: #eaecf4;
        color: #2e59d9;
    }    

</style>


<!-- JAVASCRIPT -->
<script>
    // 1. SAYFA YÜKLENİNCE ÇALIŞACAK KISIM (Event Listenerlar)
    document.addEventListener("DOMContentLoaded", function () {

        // Resim yoksa user_circle.png gelsin diye sigorta (onerror zaten HTML'de var ama bu da kalsın)
        var img = document.getElementById("profilePic");
        img.onerror = function () {
            this.src = '/Content/image/user_circle.png';
        };

        // Fotoğraf seçilince çalışacak fonksiyon (AJAX UPLOAD)
        var profileInput = document.getElementById("newProfilePhoto");

        // Eğer input varsa (ki var) olay dinleyicisini ekle
        if(profileInput) { //bu değer null'a eşit değilse..
            profileInput.addEventListener("change", function () {
                if (this.files && this.files[0]) {
                    var formData = new FormData();
                    formData.append("file", this.files[0]);

                    // Yükleniyor efekti
                    document.getElementById("profilePic").style.opacity = "0.5";

                    $.ajax({
                        url: '@Url.Action("UploadProfileImage", "Home")',
                        type: 'POST',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (response) {
                            if (response.success) {
                                // 1. Büyük resmi güncelle
                                $("#profilePic").attr("src", response.newUrl);
                                document.getElementById("profilePic").style.opacity = "1";

                                // 2. Sağ üstteki küçük resmi güncelle
                                $(".img-profile").attr("src", response.newUrl);
                                document.getElementsByClassName("img-profile")
                            } else {
                                alert("Hata: " + response.message);
                                document.getElementById("profilePic").style.opacity = "1";
                            }
                        },
                        error: function () {
                            alert("Sunucu ile iletişim hatası!");
                            document.getElementById("profilePic").style.opacity = "1";
                        }
                    });
                }
            });
        }
    });

    // ---------------------------------------------------------
    // GLOBAL FONKSİYONLAR (Document Ready'nin DIŞINDA olmalı)
    // ---------------------------------------------------------

    // 1. Düzenle Butonu
    function toggleEdit() {
        var inputs = document.querySelectorAll('.card-body form input');
        var isDisabled = inputs[0].disabled;

        inputs.forEach(input => {
            input.disabled = !isDisabled;
        });

        var btn = document.getElementById('btnEnableEdit');
        var saveBtn = document.getElementById('btnSave');

        if (isDisabled) {
            btn.innerHTML = '<i class="fas fa-times fa-sm"></i> İptal';
            btn.classList.remove('btn-primary');
            btn.classList.add('btn-danger');
            saveBtn.style.display = 'block';
        } else {
            btn.innerHTML = '<i class="fas fa-pen fa-sm"></i> Düzenle';
            btn.classList.add('btn-primary');
            btn.classList.remove('btn-danger');
            saveBtn.style.display = 'none';
        }
    }

    // 2. Profil sayfasındaki formdan gelen bilgileri kaydedecek şekilde güncellenmiş function saveChanges
    function saveChanges() {

        // Formdaki verileri topla
        var profilVerisi = {
            Ad: document.getElementById('inputName').value,
            Soyad: document.getElementById('inputSurname').value,
            // Email'i göndermiyoruz, o değiştirilemez.
            Telefon: document.getElementById('inputPhone').value,
            Sehir: document.getElementById('inputCity').value,
            DogumTarihi: document.getElementById('inputBirthday').value
        };

        // Butonu pasif yap (Çift tıklamayı önlemek için)
        var saveBtn = document.getElementById('btnSave');
        saveBtn.disabled = true;
        saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Kaydediliyor...';

        // AJAX ile sunucuya gönder
        $.ajax({
            url: '@Url.Action("ProfilGuncelle", "Home")',
            type: 'POST',
            data: profilVerisi,
            success: function (response) {
                if (response.success) {
                    alert("Bilgileriniz başarıyla güncellendi ve kaydedildi!");

                    // Düzenleme modunu kapat
                    toggleEdit();

                    // Sol taraftaki isim alanını da anlık güncelle (Opsiyonel Güzellik)
                    // (Sayfa yenilenmeden ismin değiştiğini görmek için)
                    $("h4.font-weight-bold").text(profilVerisi.Ad + " " + profilVerisi.Soyad);
                } else {
                    alert("Hata: " + response.message);
                }
            },
            error: function () {
                alert("Sunucu ile iletişim hatası!");
            },
            complete: function() {
                // İşlem bitince butonu eski haline getir
                saveBtn.disabled = false;
                saveBtn.innerHTML = '<i class="fas fa-save mr-1"></i> Değişiklikleri Kaydet';
            }
        });
    }

    // 3. Şifre Değiştirme Fonksiyonu (Senin aradığın yer burası)
    function changePassword() {
        var current = document.getElementById('currentPass').value;
        var newP = document.getElementById('newPass').value;
        var confirmP = document.getElementById('confirmPass').value;

        // Basit kontroller
        if (newP !== confirmP) {
            alert("Yeni şifreler uyuşmuyor.");
            return;
        }
        if (newP.length < 3) {
            alert("Yeni şifre çok kısa.");
            return;
        }

        // AJAX isteği
        $.ajax({
            url: '@Url.Action("ChangePassword", "Home")',
            type: 'POST',
            data: { currentPass: current, newPass: newP },
            success: function (response) {
                if (response.success) {
                    $('#passwordModal').modal('hide');
                    alert("Şifreniz başarıyla değiştirildi. Lütfen YENİ şifrenizle tekrar giriş yapın.");

                    // Çıkışa yönlendir
                    window.location.href = '@Url.Action("Logout", "Login")';
                } else {
                    alert(response.message); // "Mevcut şifre hatalı" mesajı burada çıkar
                }
            },
            error: function () {
                alert("Sunucu hatası oluştu.");
            }
        });
    }

    // --- ADRES İŞLEMLERİ ---
    function adresKaydet() {
        var form = $('#frmAdres');

        // Basit validasyon
        if (!document.getElementById('frmAdres').checkValidity()) {
            document.getElementById('frmAdres').reportValidity();
            return;
        }

        $.ajax({
            url: '@Url.Action("AdresEkle", "Home")',
            type: 'POST',
            data: form.serialize(),
            success: function (response) {
                if (response.success) {
                    alert("Adres başarıyla eklendi!");
                    location.reload(); // Sayfayı yenile ki liste güncellensin
                } else {
                    alert("Hata oluştu.");
                }
            }
        });
    }

    function adresSil(baslik) {
        if(confirm(baslik + " başlıklı adresi silmek istediğinize emin misiniz?")) {
            $.ajax({
                url: '@Url.Action("AdresSil", "Home")',
                type: 'POST',
                data: { baslik: baslik },
                success: function (response) {
                    if (response.success) {
                        location.reload();
                    }
                }
            });
        }
    }

    // Sol menüden Adres sekmesini açan fonksiyon
    function openAddressTab() {
        // Bootstrap'ın tab fonksiyonunu manuel çağırıyoruz
        $('#address-tab').tab('show');

        // Sayfayı yukarı kaydırmasın diye
        return false;
    }

   
   // --- FAVORİ SEKMESİNİ AÇMA ---
    function openFavTab() {
        // Bootstrap'ın tab fonksiyonunu çağırıyoruz
        // Eğer jQuery sürümü eskiyse .tab('show') çalışmayabilir
        // O yüzden önce manuel active class verelim, garanti olsun.

        // 1. Tüm sekmeleri kapat
        $('.nav-tabs .nav-link').removeClass('active');
        $('.tab-pane').removeClass('show active');

        // 2. Favori sekmesini aç
        $('#fav-tab').addClass('active');
        $('#favorites').addClass('show active');

        return false;
    }

    function toggleFav(id, btn) {
        $.ajax({
            url: '@Url.Action("FavoriIslemi", "Home")',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    // Eğer profildeysek sayfayı yenile ki liste güncellensin
                    location.reload();
                } else {
                    alert(response.message);
                }
            }
        });
    }

</script>