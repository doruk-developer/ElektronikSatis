
@model ElektronikSatis.Models.Profil

@{
    ViewBag.Title = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Hesabım</h1>
</div>

<div class="row">

    <!-- SOL KOLON: Profil Kartı ve Menü -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-body text-center">

                <!-- PROFİL FOTOĞRAFI ALANI (GÜNCELLENDİ) -->
                <div class="profile-pic-wrapper mb-3">
                    <div class="pic-holder">
                        <!-- onerror: Eğer resim bulunamazsa otomatik olarak user_circle.png'yi yükle demektir. -->
                        <img id="profilePic" class="pic"
                             src="@Model.ResimYolu"
                             onerror="this.onerror=null; this.src='/Content/image/user_circle.png';">


                        <!-- Yükleme İkonu (Overlay) -->
                        <input class="uploadProfileInput" type="file" name="profile_pic" id="newProfilePhoto" accept="image/*" style="opacity: 0;" />
                        <label for="newProfilePhoto" class="upload-file-block">
                            <div class="text-center">
                                <div class="mb-2">
                                    <i class="fas fa-camera fa-2x"></i>
                                </div>
                                <div class="text-uppercase">
                                    Güncelle <br /> Fotoğraf
                                </div>
                            </div>
                        </label>
                    </div>
                </div>

                <h4 class="font-weight-bold text-dark mb-1">@Model.Ad @Model.Soyad</h4>
                <p class="text-muted mb-3">@Model.Email</p>

                <span class="badge badge-success px-3 py-2 mb-4">Aktif Üye</span>
            </div>

            <!-- Profilden ve Hesap Kutucuğundan Erişilen Geçmiş Siparişlerim -->
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action" onclick="$('#p-tab').tab('show'); return false;">
                    <i class="fas fa-user-circle mr-2"></i> Kullanıcı Bilgilerim
                </a>

                <!-- ... Siparişlerim (Aynı kalsın) ... -->
                <!-- 2. Adres Bilgilerim Linki -->
                <a href="#" class="list-group-item list-group-item-action" onclick="$('#a-tab').tab('show'); return false;">
                    <i class="fas fa-map-marker-alt mr-2"></i> Adres Bilgilerim
                </a>

                <!-- 3. Favori Ürünlerim Linki -->
                <a href="#" class="list-group-item list-group-item-action" onclick="$('#f-tab').tab('show'); return false;">
                    <i class="fas fa-heart mr-2"></i> Favori Ürünlerim
                </a>
            </div>
        </div>
    </div>


     <!-- SAĞ KOLON: Sekmeli Yapı -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3">

                <!-- SEKME BAŞLIKLARI (NAV TABS) -->
                <!-- ID'lere Dikkat: p-tab, a-tab, f-tab -->
                <ul class="nav nav-tabs card-header-tabs" id="profileTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active font-weight-bold" id="p-tab" data-toggle="tab" href="#profile" role="tab">Kullanıcı Bilgileri</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" id="a-tab" data-toggle="tab" href="#address" role="tab">Adres Bilgilerim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" id="f-tab" data-toggle="tab" href="#favorites" role="tab">Favorilerim</a>
                    </li>
                </ul>

            </div>

            <div class="card-body">
                <div class="tab-content">

                    <!-- 1. SEKME İÇERİĞİ: PROFİL (ID: profile) -->
                    <div class="tab-pane fade show active" id="profile" role="tabpanel">
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="small font-weight-bold">Ad</label>
                                    <input type="text" class="form-control" id="inputName" value="@Model.Ad" disabled>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="small font-weight-bold">Soyad</label>
                                    <input type="text" class="form-control" id="inputSurname" value="@Model.Soyad" disabled>
                                </div>
                            </div>
                            <!-- Diğer inputlar... -->
                            <div class="form-group">
                                <label class="small font-weight-bold">Email</label>
                                <input type="text" class="form-control" value="@Model.Email" disabled>
                            </div>

                            <button type="button" class="btn btn-primary btn-sm" onclick="toggleEdit()" id="btnEnableEdit">Düzenle</button>
                            <button type="button" class="btn btn-success btn-sm" onclick="saveChanges()" id="btnSave" style="display:none;">Kaydet</button>
                        </form>
                    </div>

                    <!-- 2. SEKME İÇERİĞİ: ADRES (ID: address) -->
                    <div class="tab-pane fade" id="address" role="tabpanel">
                        <!-- Adres Listesi -->
                        <div class="row">
                            @if (Model.Adresler != null)
                            {
                                foreach (var item in Model.Adresler)
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="card border-left-primary h-100 shadow-sm">
                                            <div class="card-body py-2">
                                                <div class="d-flex justify-content-between">
                                                    <h6 class="font-weight-bold text-primary">@item.Baslik</h6>
                                                    <i class="fas fa-trash text-danger" style="cursor:pointer;" onclick="adresSil('@item.Baslik')"></i>
                                                </div>
                                                <small class="text-muted">@item.Sehir / @item.Ilce <br> @item.AcikAdres</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                        <hr>
                        <h6>Yeni Adres Ekle</h6>
                        <form id="frmAdres">
                            <div class="form-row">
                                <div class="col-4"><input name="Baslik" class="form-control form-control-sm" placeholder="Başlık" required></div>
                                <div class="col-4"><input name="Sehir" class="form-control form-control-sm" placeholder="Şehir" required></div>
                                <div class="col-4"><input name="Ilce" class="form-control form-control-sm" placeholder="İlçe" required></div>
                            </div>
                            <textarea name="AcikAdres" class="form-control form-control-sm mt-2" rows="2" placeholder="Adres..." required></textarea>
                            <button type="button" class="btn btn-success btn-sm btn-block mt-2" onclick="adresKaydet()">Kaydet</button>
                        </form>
                    </div>

                    <!-- 3. SEKME İÇERİĞİ: FAVORİLER (ID: favorites) -->
                    <div class="tab-pane fade" id="favorites" role="tabpanel">
                        @{ var favList = ViewBag.Favoriler as List<ElektronikSatis.Models.Urun>; }
                        @if (favList != null && favList.Count > 0)
                        {
                            <div class="row">
                                @foreach (var u in favList)
                                {
                                    <div class="col-6 mb-3">
                                        <div class="card border-0 shadow-sm">
                                            <div class="card-body p-2 text-center">
                                                <img src="@u.ResimYolu" style="height:60px;">
                                                <h6 class="small mt-2">@u.Ad</h6>
                                                <button class="btn btn-danger btn-sm py-0" onclick="toggleFav(@u.Id, this)">Kaldır</button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-center text-muted">Favori ürününüz yok.</p>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Alt İstatistik Kartları (Aynı kalıyor) -->
