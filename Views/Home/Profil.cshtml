
@model ElektronikSatisProje.Models.Profil

@{
    ViewBag.Title = "Profilim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Hesabım</h1>
</div>

<div class="row">

    <!-- SOL KOLON: Profil Kartı ve Menü -->
    <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-body text-center">

                <!-- PROFİL FOTOĞRAFI ALANI (GÜNCELLENDİ) -->
                <div class="profile-pic-wrapper mb-3">
                    <div class="pic-holder">
                        <!-- onerror: Eğer resim bulunamazsa otomatik olarak user_circle.png'yi yükle demektir. -->
                        <img id="profilePic" class="pic"
                             src="@Model.ResimYolu"
                             onerror="this.onerror=null; this.src='/Content/image/user_circle.png';">
                        

                        <!-- Yükleme İkonu (Overlay) -->
                        <input class="uploadProfileInput" type="file" name="profile_pic" id="newProfilePhoto" accept="image/*" style="opacity: 0;" />
                        <label for="newProfilePhoto" class="upload-file-block">
                            <div class="text-center">
                                <div class="mb-2">
                                    <i class="fas fa-camera fa-2x"></i>
                                </div>
                                <div class="text-uppercase">
                                    Güncelle <br /> Fotoğraf
                                </div>
                            </div>
                        </label>
                    </div>
                </div>

                <h4 class="font-weight-bold text-dark mb-1">@Model.Ad @Model.Soyad</h4>
                <p class="text-muted mb-3">@Model.Email</p>

                <span class="badge badge-success px-3 py-2 mb-4">Aktif Üye</span>
            </div>

            <!-- Sol Menü -->
            <div class="list-group list-group-flush">
                <a href="#" class="list-group-item list-group-item-action active bg-primary text-white border-0">
                    <i class="fas fa-user-circle mr-2"></i> Kullanıcı Bilgilerim
                </a>
                <a href="@Url.Action("Gecmis_Siparislerim", "Home")" class="list-group-item list-group-item-action">
                    <i class="fas fa-shopping-bag mr-2"></i> Siparişlerim
                    <span class="badge badge-danger badge-pill float-right">12</span>
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="fas fa-map-marker-alt mr-2"></i> Adres Bilgilerim
                </a>
                <a href="#" class="list-group-item list-group-item-action">
                    <i class="fas fa-heart mr-2"></i> Favori Ürünlerim
                </a>
                <!-- Şifre Değiştirme Modalını Tetikleyen Link -->
                <a href="#" class="list-group-item list-group-item-action" data-toggle="modal" data-target="#passwordModal">
                    <i class="fas fa-key mr-2"></i> Şifre Değiştir
                </a>
                <a href="#" class="list-group-item list-group-item-action text-danger" data-toggle="modal" data-target="#logoutModal">
                    <i class="fas fa-sign-out-alt mr-2"></i> Çıkış Yap
                </a>
            </div>
        </div>
    </div>

    <!-- SAĞ KOLON: Form Alanı -->
    <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Kullanıcı Bilgilerim</h6>
                <button class="btn btn-sm btn-primary shadow-sm" id="btnEnableEdit" onclick="toggleEdit()">
                    <i class="fas fa-pen fa-sm text-white-50"></i> Düzenle
                </button>
            </div>
            <div class="card-body">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="small mb-1 font-weight-bold">Ad</label>
                            <input type="text" class="form-control" id="inputName" value="@Model.Ad" disabled>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="small mb-1 font-weight-bold">Soyad</label>
                            <input type="text" class="form-control" id="inputSurname" value="@Model.Soyad" disabled>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="small mb-1 font-weight-bold">E-Posta Adresi</label>
                            <input type="email" class="form-control" id="inputEmail" value="@Model.Email" disabled>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="small mb-1 font-weight-bold">Telefon Numarası</label>
                            <input type="tel" class="form-control" id="inputPhone" value="@Model.Telefon" disabled>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="small mb-1 font-weight-bold">Şehir / Konum</label>
                            <input type="text" class="form-control" id="inputCity" value="@Model.Sehir" disabled>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="small mb-1 font-weight-bold">Doğum Tarihi</label>
                            <input type="date" class="form-control" id="inputBirthday" value="1995-05-19" disabled>
                        </div>
                    </div>

                    <button type="button" id="btnSave" class="btn btn-success mt-3" style="display:none;" onclick="saveChanges()">
                        <i class="fas fa-save mr-1"></i> Değişiklikleri Kaydet
                    </button>
                </form>
            </div>
        </div>

        <!-- Alt İstatistik Kartları -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Kazanılan Puan</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">1.250 Puan</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-coins fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Bekleyen Sipariş</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">1 Adet</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-truck-loading fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- ŞİFRE DEĞİŞTİRME MODALI -->
<div class="modal fade" id="passwordModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold text-primary">Şifre Değiştir</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="passwordForm">
                    <div class="form-group">
                        <label>Mevcut Şifre</label>
                        <input type="password" class="form-control" id="currentPass">
                    </div>
                    <div class="form-group">
                        <label>Yeni Şifre</label>
                        <input type="password" class="form-control" id="newPass">
                    </div>
                    <div class="form-group">
                        <label>Yeni Şifre (Tekrar)</label>
                        <input type="password" class="form-control" id="confirmPass">
                    </div>
                    <div id="passwordAlert" class="alert alert-danger small" style="display:none;"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">İptal</button>
                <button class="btn btn-primary" type="button" onclick="changePassword()">Güncelle</button>
            </div>
        </div>
    </div>
</div>

<!-- CSS (Fotoğraf Yükleme Efekti İçin) -->
<style>
    .profile-pic-wrapper {
        width: 100%;
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .pic-holder {
        text-align: center;
        position: relative;
        border-radius: 50%;
        width: 150px;
        height: 150px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        border: 5px solid #eaecf4; /* SB Admin grisi */
        box-shadow: 0px 5px 15px rgba(0,0,0,0.15);
    }

        .pic-holder .pic {
            height: 100%;
            width: 100%;
            object-fit: cover;
            object-position: center;
        }

        .pic-holder .upload-file-block {
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6); /* Siyah transparan */
            color: white;
            font-size: 12px;
            font-weight: 600;
            position: absolute;
            top: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            opacity: 0; /* Başlangıçta gizli */
            transition: opacity 0.3s;
        }

        /* Hover olunca göster */
        .pic-holder:hover .upload-file-block {
            opacity: 1;
        }

        .pic-holder .pic {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Resmi orantılı şekilde yuvarlağa sığdırır */
            display: block; /* Satır içi boşlukları temizler */
        }

    /* 2. O görünmez input'u tamamen gizle ki yer kaplamasın */
    .uploadProfileInput {
        display: none;
    }
</style>

<!-- JAVASCRIPT -->
<!-- JAVASCRIPT -->
<script>
    // 1. SAYFA YÜKLENİNCE ÇALIŞACAK KISIM (Event Listenerlar)
    document.addEventListener("DOMContentLoaded", function () {

        // Resim yoksa user_circle.png gelsin diye sigorta (onerror zaten HTML'de var ama bu da kalsın)
        var img = document.getElementById("profilePic");
        img.onerror = function () {
            this.src = '/Content/image/user_circle.png';
        };

        // Fotoğraf seçilince çalışacak fonksiyon (AJAX UPLOAD)
        var profileInput = document.getElementById("newProfilePhoto");

        // Eğer input varsa (ki var) olay dinleyicisini ekle
        if(profileInput) { //bu değer null'a eşit değilse..
            profileInput.addEventListener("change", function () {
                if (this.files && this.files[0]) {
                    var formData = new FormData();
                    formData.append("file", this.files[0]);

                    // Yükleniyor efekti
                    document.getElementById("profilePic").style.opacity = "0.5";

                    $.ajax({
                        url: '@Url.Action("UploadProfileImage", "Home")',
                        type: 'POST',
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (response) {
                            if (response.success) {
                                // 1. Büyük resmi güncelle
                                $("#profilePic").attr("src", response.newUrl);
                                document.getElementById("profilePic").style.opacity = "1";

                                // 2. Sağ üstteki küçük resmi güncelle
                                $(".img-profile").attr("src", response.newUrl);
                                document.getElementsByClassName("img-profile")
                            } else {
                                alert("Hata: " + response.message);
                                document.getElementById("profilePic").style.opacity = "1";
                            }
                        },
                        error: function () {
                            alert("Sunucu ile iletişim hatası!");
                            document.getElementById("profilePic").style.opacity = "1";
                        }
                    });
                }
            });
        }
    });

    // ---------------------------------------------------------
    // GLOBAL FONKSİYONLAR (Document Ready'nin DIŞINDA olmalı)
    // ---------------------------------------------------------

    // 1. Düzenle Butonu
    function toggleEdit() {
        var inputs = document.querySelectorAll('.card-body form input');
        var isDisabled = inputs[0].disabled;

        inputs.forEach(input => {
            input.disabled = !isDisabled;
        });

        var btn = document.getElementById('btnEnableEdit');
        var saveBtn = document.getElementById('btnSave');

        if (isDisabled) {
            btn.innerHTML = '<i class="fas fa-times fa-sm"></i> İptal';
            btn.classList.remove('btn-primary');
            btn.classList.add('btn-danger');
            saveBtn.style.display = 'block';
        } else {
            btn.innerHTML = '<i class="fas fa-pen fa-sm"></i> Düzenle';
            btn.classList.add('btn-primary');
            btn.classList.remove('btn-danger');
            saveBtn.style.display = 'none';
        }
    }

    // 2. Kaydet Butonu
    function saveChanges() {
        alert("Bilgileriniz başarıyla güncellendi!");
        toggleEdit();
    }

    // 3. Şifre Değiştirme Fonksiyonu (Senin aradığın yer burası)
    function changePassword() {
        var current = document.getElementById('currentPass').value;
        var newP = document.getElementById('newPass').value;
        var confirmP = document.getElementById('confirmPass').value;

        // Basit kontroller
        if (newP !== confirmP) {
            alert("Yeni şifreler uyuşmuyor.");
            return;
        }
        if (newP.length < 3) {
            alert("Yeni şifre çok kısa.");
            return;
        }

        // AJAX isteği
        $.ajax({
            url: '@Url.Action("ChangePassword", "Home")',
            type: 'POST',
            data: { currentPass: current, newPass: newP },
            success: function (response) {
                if (response.success) {
                    $('#passwordModal').modal('hide');
                    alert("Şifreniz başarıyla değiştirildi. Lütfen YENİ şifrenizle tekrar giriş yapın.");

                    // Çıkışa yönlendir
                    window.location.href = '@Url.Action("Logout", "Login")';
                } else {
                    alert(response.message); // "Mevcut şifre hatalı" mesajı burada çıkar
                }
            },
            error: function () {
                alert("Sunucu hatası oluştu.");
            }
        });
    }
</script>