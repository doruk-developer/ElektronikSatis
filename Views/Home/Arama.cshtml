@model IEnumerable<ElektronikSatisProje.Models.Urun>

@{
    ViewBag.Title = "Arama Sonuçları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Başlık Alanı -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        "@ViewBag.ArananKelime" için sonuçlar
    </h1>
    <span class="badge badge-primary p-2" style="font-size: 1rem;">@Model.Count() ürün bulundu</span>
</div>

<div class="row">

    @if (Model.Count() == 0)
    {
        <div class="col-12 text-center py-5">
            <i class="fas fa-search fa-4x text-gray-300 mb-3"></i>
            <h4 class="text-gray-500">Aradığınız kriterlere uygun ürün bulunamadı.</h4>
            <a href="~/Home/Index" class="btn btn-primary mt-3">Anasayfaya Dön</a>
        </div>
    }
    else
    {
        foreach (var urun in Model)
        {
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card shadow h-100 product-card">

                    <!-- Rozet -->
                    <div class="badge-overlay">
                        <span class="badge @urun.RozetClass px-3 py-2">@urun.Rozet</span>
                    </div>

                    <!-- 1. RESİM ALANI (Tıklanabilir Link Eklendi) -->
                    <div class="img-container p-3">
                        <a href="@Url.Action("UrunDetay", "Home", new { id = urun.Id })">
                            <img src="@urun.ResimYolu" class="card-img-top product-img" alt="@urun.Ad">
                        </a>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <!-- 2. BAŞLIK (Tıklanabilir Link Eklendi) -->
                        <a href="@Url.Action("UrunDetay", "Home", new { id = urun.Id })" class="text-decoration-none text-dark">
                            <h6 class="card-title font-weight-bold" style="height: 40px; overflow: hidden;">
                                @urun.Ad
                            </h6>
                        </a>

                        <div class="mt-auto">
                            <!-- Kampanya -->
                            <div class="mb-2">
                                <span class="badge badge-soft-primary text-primary border border-primary">
                                    @(string.IsNullOrEmpty(urun.Kampanya) ? "Fırsat Ürünü" : urun.Kampanya)
                                </span>
                            </div>

                            <!-- Fiyat -->
                            <h4 class="font-weight-bold text-dark mb-3">@urun.Fiyat.ToString("N0") TL</h4>

                            <!-- 3. BUTONLAR -->
                            <div class="row no-gutters">
                                <!-- İNCELE BUTONU (MANTIK BURADA KURULDU) -->
                                <div class="col-6 pr-1">
                                    <a href="@Url.Action("UrunDetay", "Home", new { id = urun.Id })" class="btn btn-light btn-block border">
                                        <i class="fas fa-search fa-sm"></i> İncele
                                    </a>
                                </div>
                                <!-- Sepete Ekle Butonu -->
                                <div class="col-6 pl-1">
                                    <button class="btn btn-primary btn-block"
                                            onclick="addToCart('@urun.Ad', @((int)urun.Fiyat), '@urun.ResimYolu')">
                                        <i class="fas fa-cart-plus"></i> Ekle
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

</div>

<!-- CSS (Kategori Sayfalarıyla Aynı) -->
<style>
    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: 1px solid #e3e6f0;
        background-color: #fff;
        overflow: hidden;
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
            border-color: #4e73df;
        }

    .img-container {
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #fff;
        border-bottom: 1px solid #f1f1f1;
        padding: 15px;
    }

    .product-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        width: auto;
        height: auto;
    }

    .badge-overlay {
        position: absolute;
        top: 10px;
        left: 10px;
        z-index: 5;
    }

    a.text-decoration-none:hover {
        text-decoration: none;
        color: #4e73df !important;
    }

    body.dark-mode .product-card {
        background-color: #1e1e1e;
        border-color: #333;
    }

    body.dark-mode .img-container {
        background-color: #1e1e1e;
        border-bottom: 1px solid #333;
    }

    body.dark-mode .text-dark {
        color: #e0e0e0 !important;
    }
</style>